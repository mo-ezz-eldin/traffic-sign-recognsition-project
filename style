        }

        /* Result card styling */
        .result-card {
            background: linear-gradient(145deg, #ffffff, #f0f0f0);
            border-radius: 20px;
            padding: 2rem;
            margin: 1rem 0;
            box-shadow: 0 15px 35px rgba(0,0,0,0.1);
            border: 1px solid rgba(255,255,255,0.3);
            color: #333;
        }

        .prediction-text {
            font-size: 1.8rem;
            font-weight: 600;
            color: #2e7d32;
            text-align: center;
            margin: 1rem 0;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
        }

        .confidence-text {
            font-size: 1.4rem;
