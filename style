def get_confidence_message(confidence):
    """
    Get confidence interpretation message
    
    Args:
        confidence (float): Confidence score
        
    Returns:
        tuple: (message_type, message_text)
    """
    if confidence > 0.9:
        return "success", "ğŸ”¥ Excellent! Very confident prediction"
    elif confidence > 0.7:
        return "info", "âœ… Good! Confident prediction"
    else:
        return "warning", "âš ï¸ Moderate confidence - image might be unclear"
